# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Email Configuration (for follow-up emails)
# Use Gmail App Passwords or other SMTP providers
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=admissions@university.edu

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Logging Configuration
LOG_LEVEL=INFO

# Model Configuration
WHISPER_MODEL=base
HF_MODEL_NAME=microsoft/DialoGPT-medium

# Database Configuration (leave empty for default SQLite)
DATABASE_URL=

# Security Configuration
SECRET_KEY=your-secret-key-here

# External API Keys (if needed)
# OPENAI_API_KEY=your-openai-key
# HUGGINGFACE_API_KEY=your-hf-key

# University Information
UNIVERSITY_NAME=Springfield University
UNIVERSITY_EMAIL=admissions@springfield.edu
UNIVERSITY_PHONE=(555) 123-4567
UNIVERSITY_ADDRESS=123 University Avenue, Springfield, IL 62701

# File Upload Limits
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
MAX_AUDIO_DURATION=300  # 5 minutes in seconds

# Performance Settings
WORKER_PROCESSES=4
WORKER_TIMEOUT=30
MAX_REQUESTS=1000

# Feature Flags
ENABLE_VOICE_FEATURES=True
ENABLE_EMAIL_FOLLOWUP=True
ENABLE_ANALYTICS=True
ENABLE_FEEDBACK=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHING=False

# Monitoring and Analytics
ENABLE_MONITORING=False
SENTRY_DSN=

# Production Settings
SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True